
<div class="container px-5 px-sm-0">
  <div class="row">

  <% if @range == "User" %>
    <h1>Users search for '<%= params[:word] %>'</h1>

    <table class="table table-inverse table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
      <tr>

        <td>
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
      </tr>
      <% end %>
      </tbody>
    </table>


    <% else %>

    <h1>Books search for '<%= params[:word] %>'</h1>

        <table class="table table-hover table-inverse">

      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
         <% @books.each do |book| %>
        <tr>
          <th></th>
          <td>
            <%= link_to user_path(book.user.id), target: "" do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <% end %>

    </div>
  </div>
