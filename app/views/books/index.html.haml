.container
  .row
    .col-lg-4
      = render "books/list", user: @user, book: @book
    - if @book.errors.any?
      = @book.errors.count
      - @book.errors.full_messages.each do |message|
        error
        \#{message}
    .col-lg-8
      %h3 Books
      %table.table
        %tr
          %td
          %th Title
          %th Opinion
          %td
          %td
        - @books.each do |book|
          %tr
            %td= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"
            %td= book.title
            %td= book.body
