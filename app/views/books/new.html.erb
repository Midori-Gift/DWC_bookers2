<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag('sample-author1.jpg') %>
</div>

<% @books.each do |post_book| %>
<div>
  <%= link_to book_path(post_book.id) do %>
    <%= attachment_image_tag post_book, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>Books：<%= post_image.book %></p>
  <p>introduction：<%= post_image.caption %></p>
  <p>User info：<%= post_book.user.name %></p>
</div>
<% end %>
<%= paginate @books %>