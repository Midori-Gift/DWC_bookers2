<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render "books/list", user: @user, book: @book %>
    </div>

          <% if @book.errors.any? %>
          <%= @book.errors.count %>
          <% @book.errors.full_messages.each do |message| %>error
            <%= message %>
          <% end %>
        <% end %>


    <div class="col-lg-8">
        <h3>Books</h3>
      <table class="table">
      <tr>
        <td></td>
        <th>Title</th>
        <th>Opinion</th>
        <td></td>
        <td></td>
      </tr>

       <% @books.each do |book| %>
       <tr>
         <td><%= link_to user_path(book.user), target: "" do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
          <% end %>
        </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
    </table>
        </div>
      </div>
    </div>
  </div>

