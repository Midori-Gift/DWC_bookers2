<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render "books/list", user: @user, book: @book %>
    </div>
    <div class="col-lg-8">
      <h3>Books</h3>
      <table class="table table-striped">
        <% @books.each do |book| %>
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
           <%= book.title %>
           <%= book.body %>
           <%= link_to "Edit", edit_book_path(book.id) %>
           <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
       </div>
      </div>
    </div>
  </div>
<% end %>
