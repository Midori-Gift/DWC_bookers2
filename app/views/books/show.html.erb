<div class=container>
  <div class="row">


<div class="col-md-3">



    <%= render "users/list", user: @user, book: @new_book %>


  </div>


<div class="col-md-8 offset-md-1">


  <h2>Book detail</h2>



  <table class="table">



    <tbody>



      <tr>

        <td>

          <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %><br />
          <%=  @user.name  %>
          <% end %>

        </td>


        <td><%= link_to @book.title, book_path(@book.id) %></td>


        <td><%= @book.body %></td>

        <td><%= render "users/favorite", book: @book %></td>

        <td>コメント数：<%= @book.book_comments.count %></td>


         <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>


      </tr>



    </tbody>




  </table>

  <div class="comments-js">
    <%= render "users/comments", book: @book, book_comments: @book_comment %>
  </div>


</div>

    </div>
  </div>
















































