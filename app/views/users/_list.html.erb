

    <h2>User info</h2>


    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>


    <table class="table">

      <tbody>

      <tr></tr>

      <tr>

        <th>name</th>

        <th><h4 class="profile-name, text-nowrap"><%= user.name %></h4></th>

      </tr>


      <tr>

        <th>introduction</th>

        <th><%= user.introduction %></th>

      </tr>

      </tbody>

    </table>



    <div class="row">


      <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

    </div>

    <h2 class="mt-3">New book</h2>


    <div class="form">


        <%= form_with model:book, local:true do |f| %>

      <div class="form-group">

        <label for="book_title">Title</label>


        <%= f.text_field :title, class: "form-control"%>


      </div>



      <div class="form-group">

        <label for="book_opinion">Opinion</label>


         <%= f.text_area :body, class: "form-control" %>

      </div>


      <div class="form-group">

         <%= f.submit :"Create Book", class: "btn btn-success" %>

      </div>

      <% end %>


    </div>
