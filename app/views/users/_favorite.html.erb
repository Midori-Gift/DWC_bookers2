

 <% if book.favorited_by?(current_user) %>
      <span class="favo">
        <%= link_to(book_favorites_path(book), class:"text-dark", method: :delete) do %>
          <i class="fa fa-heart" aria-hidden="true"></i> <%= book.favorites.count %>
        <% end %>
      </span>
      <% else %>
      <span class="favo">
        <%= link_to(book_favorites_path(book), class:"text-dark", method: :post) do %>
          <i class="fa fa-heart" aria-hidden="true"></i> <%= book.favorites.count %>
        <% end %>
      </span>
    <% end %>