<div class="container">
  <div class="row">
    <div class="col-lg-4">
<%= render "users/list", user: @user %>

<div class="col-lg-8">
    <h3>Users</h3>
    <% @users.each do |user| %>
      <tr>
        <th>image <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
        </th>
        <th>name <h4 class="profile-name"><%= user.name %></h4>
        </th>
      </tr>
        <tr>
          <th><%= link_to "Show", user_path(user.id) %></th>
        </tr>
      </div>
    </div>
  </div>
</div>
<% end %>