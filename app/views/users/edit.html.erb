<div class="container">
  <div class="row">
    <div class="col">

          <% if @user.errors.any? %>
            <%= @user.errors.count %>errors
            <% @user.errors.full_messages.each do |message| %>
            <%= message %>
         <% end %>
        <% end %>

    <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>

          Name


          <%= f.text_field :name, autofocus: true, id:"name", placeholder:"name" %>
            <p>ProfileImage</p>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
              <p>introduction</p>
              <%= f.text_area :introduction %>
            <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>