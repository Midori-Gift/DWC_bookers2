

  <p id="notice"></p>


  <div class="container">


      <% if @user.errors.any? %>
        <%= @user.errors.count %>error
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>


  <div class="row">



    

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>




      <%= form_with model:@user, local:true do |f| %>


      <div class="form">


        <div class="form-group">


          <label for="user_name">Name</label>




          <%= f.text_field :name, autofocus: true, id:"name", class:"form-control name" %>

        </div>



        <div class="form-group">


          <p>Image</p>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>



        </div>


        <div class="form-group">
          <p>introduction</p>

          <%= f.text_area :introduction, class:"form-control name"%>


        </div>


        <div class="form-group">

           <%= f.submit "Update User" %>

        </div>

        <% end %>



      </div>



    </div>


  </div>




  </div>






