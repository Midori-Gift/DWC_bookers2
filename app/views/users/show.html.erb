 <div class="container">
    <div class="row">
      <div class="col-lg-4">

           <div class="profile-container">
     <div class="col-lg-4">
     <h3 class="text-nowrap">user info</h3>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
     <h5>name</h5>
     <h4 class="profile-name, text-nowrap"><%= @user.name %></h4>
     <h5>introduction</h5>
     <%= @user.introduction %>

      <% if @user.id == current_user.id %>
       <%= link_to "", edit_user_path(@user.id), class: "btn fas fa-user-cog btn-secondary" %>
      <% end %>
     <h3 class="text-nowrap">New book</h3>
     <%= form_with model:@book, local:true do |f| %>
       <div class="col-lg-4">
         <label>Title</label>
         <%= f.text_field :title %>
       </div>
       <div class="col-lg-4">
       <label>Opinion</label>
         <%= f.text_area :body %>
         <%= f.submit :"Create Book", class: "btn btn-secondary" %>
       </div>
     <% end %>
     </div>
   </div>


        </div>
         <div class="col-lg-8">
          <h2>Books</h2>
          <table class="table">
           <tr>
            <td></td>
            <td></td>
            <td></td>
             <th>Title</th>
            <th>Opinion</th>
            <td></td>
           </tr>
          </table>
   <% @books.each do |book| %>
   <table class="table">
      <tr>
       <div class="link_to">
       <%= link_to(book_path(book.id), class:"text-dark") do %>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6", class:"mt-3 rounded-circle"; %></td>
        <th><%= book.title %></th>
        <th><td><%= book.body %></td></th>

          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          <% end %>
       </tr>
         <% end %>
        </div>
      </div>
      </table>


  <% end %>

    </div>
  </div>