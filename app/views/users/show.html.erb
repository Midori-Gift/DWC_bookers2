 <div class="container px-5 px-sm-0r">
    <div class="row">
      <div class="col-md-3">

           <div class="profile-container">
             <div class="col-md-3">
             <h3 class="text-nowrap">user info</h3>
             <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
             <h5>name</h5>
             <h4 class="profile-name, text-nowrap"><%= @user.name %></h4>
             <h5>introduction</h5>
             <%= @user.introduction %>
             
              <% if @user.id == current_user.id %>
               <%= link_to "", edit_user_path(@user.id), class: "btn fas fa-user-cog btn-secondary" %>
              <% else %>
               <%= link_to "", user_path(current_user.id), class: "btn fas fa-user-cog btn-secondary" %>
              <% end %>
             <h3 class="text-nowrap">New book</h3>
             <%= form_with model:@new_book, local:true do |f| %>
               <div class="col-lg-4">
                 <label>Title</label>
                 <%= f.text_field :title %>
               </div>
               <div class="col-lg-4">
               <label>Opinion</label>
                 <%= f.text_area :body %>
                 <%= f.submit :"Create Book", class: "btn btn-secondary" %>
               </div>
             <% end %>
             </div>
          </div>

      </div>


     <div class="col-md-8 offset-md-1">

     <h2>Books</h2>

     <table class="table table-hover table-inverse">

     <thead>

     <tr>

     <th></th>

     <th>Title</th>

     <th>Opinion</th>

     <th colspan="3"></th>

     </tr>

     </thead>

     <tbody>

      <% @books.each do |book| %>
     <tr>

     <th></th>

     <th><%= link_to user_path(@users.id), target: "" do %>

     <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
     <% end %>
     </th>

     <th><%= link_to book.title, book_path(book.id) %></th>

      <th></th>
      <td><%= book.body %></td>
      <td></td>

     </tr>
     <% end %>

     </tbody>

     </table>

     </div>

    </div>
  </div>

