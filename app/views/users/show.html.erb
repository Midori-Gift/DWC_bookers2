 <div class="container px-5 px-sm-0r">
    <div class="row">
      <div class="col-md-3">

      <%= render "users/userinfo", user: @user %>

      <%= render "users/newbook", user: @user, book: @new_book %>

      </div>


     <div class="col-md-8 offset-md-1">

     <h2>Books</h2>

     <table class="table table-hover table-inverse">

     <thead>

     <tr>

     <th></th>

     <th>Title</th>

     <th>Opinion</th>

     <th colspan="3"></th>

     </tr>

     </thead>

     <tbody>

      <% @books.each do |book| %>
     <tr>

     <th></th>

     <th><%= link_to user_path(@user.id), target: "" do %>

     <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %>
     <% end %>
     </th>

     <th><%= link_to book.title, book_path(book.id) %></th>

      <th></th>
      <td><%= book.body %></td>
      <td></td>

     </tr>
     <% end %>

     </tbody>

     </table>

     </div>

    </div>
  </div>