</table>


<table>
  <%= @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %></td>
    <td><%= user.name%></td>
    <td><%= "フォロー数:", user.follow.count %></td>
    <td></td>
    <td></td>
    <td></td>
    <td><%= "フォロワー数:", user.follower.count %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
</table>